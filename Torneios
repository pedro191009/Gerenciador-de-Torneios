print('Olá, bem vindo ao meu gerenciador de torneios')
nome = input('Primeiro me diga seu nome: ')
print(f'Olá {nome}, espero que goste do meu gerenciador de torneios')

print('\n--- MENU PRINCIPAL ---')
print('1- Mata-Mata')
print('2- SEMIS')
print('3- FINAL')

escolha_usuario = int(input('Escolha qual torneio você quer fazer: '))

if escolha_usuario == 1:
    print(f'Boa escolha {nome}!')
    print('\nVocê já sabe como funciona?')
    print('1- Começar')
    print('2- Como funciona isso aí, adm? Explicação modo de torneio.')
    escolha2 = int(input('O que você quer fazer? '))

    if escolha2 == 1:
        print('\nEntão vamos lá! Quais serão os nomes dos times:')
        times = []
        for i in range(1, 9):  # 8 times
            time = input(f'Digite o nome do time {i}: ')
            times.append(time)

        print("\nTimes cadastrados com sucesso:")
        for t in times:
            print("-", t)

    elif escolha2 == 2:
        print(f'\nFica tranquilo meu mano {nome}, vou te explicar certinho:')
        print('No mata-mata, os times se enfrentam em partidas eliminatórias.')
        print('Quem vence avança, quem perde tá fora.')
        print('Isso continua até sobrar só um campeão.')
    else:
        print('Opção inválida meu mano.')

elif escolha_usuario == 2:
    print('Esta opção ainda está sendo desenvolvida...')

elif escolha_usuario == 3:
    print(f'{nome}, blz meu nobre, vamos para as finais')
    print('\nEntão vamos lá! Quais serão os nomes dos times:')
    times = []  
    for i in range(1, 3):  # 2 times
        time = input(f'Digite o nome do time {i}: ')
        times.append(time)


else:
    print('Opção inválida meu mano.')
    
#\n é quebra de linha
#.append é a lista
#range vai fazer um looping
